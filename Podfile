# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'festy' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for festy
  pod 'Apollo', '~> 0.9'
  pod 'PromiseKit', '~> 6.8'

  target 'festyTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'festyUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'festy WatchKit App' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  pod 'Apollo', '~> 0.9'
  # Pods for festy WatchKit App

end

target 'festy WatchKit Extension' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  pod 'Apollo', '~> 0.9'
  pod 'SwiftyJSON', '~> 4.0'

  # Pods for festy WatchKit Extension

end
